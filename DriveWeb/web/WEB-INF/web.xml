<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>registrar</servlet-name>
        <servlet-class>proceso.registrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>proceso.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cargarArchivos</servlet-name>
        <servlet-class>proceso.cargarArchivos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>descargarArchivo</servlet-name>
        <servlet-class>proceso.descargarArchivo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>descargar</servlet-name>
        <servlet-class>proceso.descargar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>crearCarpeta</servlet-name>
        <servlet-class>proceso.crearCarpeta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>selecionarCarpetas</servlet-name>
        <servlet-class>proceso.selecionarCarpetas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>selecionarArchivos</servlet-name>
        <servlet-class>proceso.selecionarArchivos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrar</servlet-name>
        <url-pattern>/registrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cargarArchivos</servlet-name>
        <url-pattern>/cargarArchivos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>descargarArchivo</servlet-name>
        <url-pattern>/descargarArchivo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>descargar</servlet-name>
        <url-pattern>/descargar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crearCarpeta</servlet-name>
        <url-pattern>/crearCarpeta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>selecionarCarpetas</servlet-name>
        <url-pattern>/selecionarCarpetas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>selecionarArchivos</servlet-name>
        <url-pattern>/selecionarArchivos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
